public class Solution {
    public int MissingNumber(int[] nums) {
      int n = nums.Length;
       int sum = 0;
       int total = (n*(n + 1))/2;
        
       for(int i = 0 ; i < nums.Length; i++){
           sum = sum + nums[i];
       } 
       int result = total - sum;
       return result;
    }
}


//////////// Carl Gaug rule (n*(n+1))/2
